@model CadastroCliente.Web.Models.ClienteOrdemServicoModelDTO

<div class="container">
    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.ErrorMessage
        </div>
    }
    <h1 class="mt-4">Atualizar Cliente e Ordem de Serviço</h1>
    <form asp-action="Update">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Cliente.Id" />
        <input type="hidden" asp-for="OrdemDeServico.Id" />
        <input type="hidden" asp-for="Servico.Id" />
        <input type="hidden" asp-for="Servico.OrdemDeServicoId" />

        <h2>Dados do Cliente</h2>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Cliente.Nome"></label>
                    <input asp-for="Cliente.Nome" class="form-control" />

                </div>
                <div class="form-group">
                    <label asp-for="Cliente.Telefone"></label>
                    <input asp-for="Cliente.Telefone" class="form-control" />
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Cliente.Endereco"></label>
                    <input asp-for="Cliente.Endereco" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Cliente.Email"></label>
                    <input asp-for="Cliente.Email" class="form-control" />
                </div>
            </div>
        </div>


        <hr />

        <h2>Dados da Ordem de Serviço</h2>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="OrdemDeServico.Numero"></label>
                    <input asp-for="OrdemDeServico.Numero" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="OrdemDeServico.DataEmissao"></label>
                    <input asp-for="OrdemDeServico.DataEmissao" type="date" class="form-control" />
                </div>
                <div class="form-group">
                    <select asp-for="OrdemDeServico.Responsavel" class="form-control">
                        <option value="">Selecione um responsável</option>
                        @foreach (var user in Model.Users)
                        {
                            <option value="@user.Name" selected="@(Model.OrdemDeServico.Responsavel == user.Name.ToString())">@user.Name</option>
                        }
                    </select>
                </div>


            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="OrdemDeServico.PrazoExecucao"></label>
                    <input asp-for="OrdemDeServico.PrazoExecucao" type="date" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="OrdemDeServico.DataConclusao"></label>
                    <input asp-for="OrdemDeServico.DataConclusao" type="date" class="form-control" />
                </div>
            </div>
        </div>

        <hr />

        <h2>Dados do Serviço</h2>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Servico.Descricao"></label>
                    <input asp-for="Servico.Descricao" class="form-control" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Servico.Materiais"></label>
                    <input asp-for="Servico.Materiais" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Servico.Instrucoes"></label>
                    <input asp-for="Servico.Instrucoes" class="form-control" />
                </div>
            </div>
        </div>

        <button type="submit" class="btn btn-primary mt-3">Atualizar</button>
    </form>
</div>
